page {
  display: block;
  min-height: 100%;
  background-color: #f4f7fe;
}

.public_cell_input {
  background: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  align-items: center;
}
.cell_left {
  /* font-size: 32rpx; */
  color: #666;
  width: 30%;

}
.cell_right {
  /* font-size: 32rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  width: 70%;
}
.cell_right .right_input {
  width: 100%;
  color: #333;
}
.cell_hor_line {
  height: 2rpx;
  margin-left: 30rpx;
  background: #dbdbdb;
}
.public_cell_picker {
  background: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  align-items: center;
}
.cell_right .left {
  width: 90%;
  color: #333;
}
.cell_right .right image {
  width: 30rpx;
  height: 30rpx;
}
.section_hor_line {
  height: 20rpx;
}
.radio_group {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
}
.radio_group .title {
  padding-bottom: 20rpx;
  font-size: 32rpx;
  color: #666;
}
.radio_group .content {
  font-size: 32rpx;
  display: flex;
  flex-wrap: wrap;
}
.item_info {
  margin-right: 20rpx;
  width: 20%; 
  text-align: center;
  border: 2rpx solid #999;
  border-radius: 4rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.item_rate_info {
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  padding: 5rpx 10rpx;
  text-align: center;
  border: 2rpx solid #999;
  border-radius: 4rpx;
  color: #666;
}

.checked {
  border: 2rpx solid #605bf5;
  border-radius: 4rpx;
  color: #605bf5;
}

.switch_cell {
  background: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  justify-content: space-between;
}
.next_btn {
  width: 100%;
  height: 90rpx;
  background: #7080fa;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 90rpx;
  color: #ffffff;
  z-index: 99;
  border-radius: 0rpx;
}
.page_view {
  margin-bottom: 90rpx;
}