page {
  display: block;
  min-height: 100%;
  /* background-color: #f4f7fe;  */
}

.float-container {
  display: flex;
  flex-direction: column;
}

.float-top{
  height: 410rpx;
  background-color: #f4f7fe;
}

.tab_list_data{
  height: 1600rpx; 
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #f4f7fe;
}

/** top-item */
.tab-item {
  display: flex;
  flex-direction: column;
  background: #ffffff;
}
.tab-item .group-top{
  display: flex;
  justify-content: space-between;
}
.group-top .left-view {
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
}
.left-view image {
  width: 60rpx;
  height: 60rpx;
}
.left-view text {
   padding: 10rpx 20rpx; 
   font-size: 32rpx;

}
.group-top .right-view {
  padding: 20rpx 30rpx; 
  height: 100%; 
}
.right-view text {
 font-size: 32rpx;
 color: #999;
 height: 100%;
}
.line-view {
  height: 2rpx;
  background: #dbdbdb;
}
.tab-item .group-bottom {
  display: flex;
  justify-content: space-between;
}
.group-bottom .bottom-left {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0 10rpx 30rpx;
}
.section-item {
  display: flex;
  padding:  0 0 20rpx 0;
  font-size: 28rpx;
  justify-content: space-between;
}
.section-item .left {
  color: #999;
}
.section-item .right {
  flex: 1;
  padding-left: 15rpx;
  text-align: left;
  width: 50%; 
}

.group-bottom .bottom-right {
  padding: 30rpx 30rpx;
  width: 30%;
  text-align: right;
}

.bottom-right text {
  font-size: 30rpx;
  color: #999;
}

.section-view {
  height: 20rpx;
  background: #f4f7fe;
}

.on {
 color: red;
}

/** 申请进度 */

.apply_progress {
  width: 100%;
}
.progress_item {
  display: flex;
  background: #ffffff;
  justify-content: space-between;
}
.progress_item .item_left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 0 0  30rpx;
}
.group-left {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.group-left image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.group-left .hor_line {
  height: 60rpx;
  width: 4rpx;
  background: #dbdbdb;
  margin-top: 10rpx;
}
.group-right {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  text-align: left;
}
.group-right .title {
  font-size: 30rpx;
  color: #333;
}
.group-right .content {
  font-size: 26rpx;
  color: #999;
  /* width: 90%; */
  margin-top: 15rpx;
}
.progress_item .item-right {
  text-align: right;
  padding: 30rpx 30rpx;
}
.item-right button {
   display: flex; 
  font-size: 30rpx;
  margin-top: 10rpx;
  border: 2rpx solid #605bf5;
  background: #ffffff;
  color: #605bf5;
}

/** 申请信息 */

.apply_detail {
  width: 100%;
}
.detail_item {
  display: flex;
  flex-direction: column;
  background: #ffffff;
}
.detail_item .item_top {
  padding: 5rpx 30rpx;
  height: 100%;
}
.item_top text {
  font-size: 30rpx;
  color: #666;
}
.detail_item .line_view {
  height: 2rpx;
  background: #dbdbdb;
}
.item_bottom_section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  text-align: left;
}
.item_bottom_section .left{
  font-size: 28rpx;
  color: #999;
  width: 30%;
}
.item_bottom_section .middle {
  font-size: 28rpx;
  color: #333;
  width: 30%;
}
.item_bottom_section .right {
  font-size: 28rpx;
  color: #333;
  width: 30%;
}
.detail_item .section_view {
  height: 20rpx;
  background: #f4f7fe;
}
.photos_view {
  display: flex;
  flex-direction: column;
}
.photos_view .photo_title {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}

.imgList{
  background: #ffffff;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;  
  padding: 20rpx 30rpx;
}
.imgList .imgList-li{
  /* width: 100%; */
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx 10rpx;
}
.imgList .imgList-li .img{
  width: 200rpx;
  height: 200rpx;
}