.tab_item {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 96rpx;
}

.tab_item_text_nor {
    width: auto;
    height: 96rpx;
    line-height: 96rpx;
    color: #666;
    font-size: 30rpx;
    text-align: center;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    box-sizing: border-box;
    -webkit-box-orient: vertical;
}

.tab_item_text_select {
    width: auto;
    height: 96rpx;
    line-height: 96rpx;
    color: #605bf5;
    font-size: 30rpx;
    text-align: center;
     text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    box-sizing: border-box;
}

.tab_item_bottom_line {
    position: absolute;
    bottom: 0;
    /* left: 50%;
    margin-left: -30rpx; */
    z-index: 99;
    background-color: #605bf5;
    width: 50%; 
    height: 6rpx;
}